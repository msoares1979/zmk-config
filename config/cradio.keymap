#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define ZMK_POINTING_DEFAULT_MOVE_VAL 1500  // default: 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20    // default: 10

#include <dt-bindings/zmk/pointing.h>

// Home row mods macro
#define HRML(k1,k2,k3,k4) &ht LSHFT k1  &ht LALT k2  &ht LCTRL k3  &ht LGUI k4
#define HRMR(k1,k2,k3,k4) &ht RGUI k1  &ht RCTRL k2  &ht RALT k3  &ht RSHFT k4

// My layer names
#define KEYS      0
#define SYMS      1
#define NAVS      2
#define UTIL      3
#define GAMENUM   4
#define MOUSE     5

/ {
    behaviors {
        shifted: macro_shifted_kp {
          #binding-cells = <1>;
          label = "MACRO_SHIFTED_KP";
          compatible = "zmk,behavior-macro-one-param";
          bindings =
            <&macro_press &kp LSHFT>,
            <&macro_param_1to1 &macro_tap &kp MACRO_PLACEHOLDER>,
            <&macro_release &kp LSHFT>;
        };
        as_ht: autoshift_hold_tap {
          compatible = "zmk,behavior-hold-tap";
          label = "AUTOSHIFT_HOLD_TAP";
          #binding-cells = <2>;
          tapping-term-ms = <135>;
          flavor = "tap-preferred";
          bindings = <&shifted>, <&kp>;
        };
        as: autoshift {
          compatible = "zmk,behavior-macro-one-param";
          #binding-cells = <1>;
          label = "AUTOSHIFT_KP";
          bindings =
            <&macro_press>,
            <&macro_param_1to1>,
            <&macro_param_1to2>,
            <&as_ht MACRO_PLACEHOLDER MACRO_PLACEHOLDER>,
            <&macro_pause_for_release>,
            <&macro_release>,
            <&macro_param_1to1>,
            <&macro_param_1to2>,
            <&as_ht MACRO_PLACEHOLDER MACRO_PLACEHOLDER>;
        };
        ht: hold_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <220>;
            quick-tap-ms = <150>;
            require-prior-idle-ms = <100>;
            bindings = <&kp>, <&kp>;
        };
        hsk: hold_kp_tap_sticky {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            bindings = <&kp>, <&sk>;
        };
        td_q_esc: tap_dance {
          compatible = "zmk,behavior-tap-dance";
          #binding-cells = <0>;
          tapping-term-ms = <200>;
          bindings = <&kp Q>, <&kp ESC>;
        };
        numto: numlock_and_go_to {
          label = "MACRO_NUMLOCK_AND_GO_TO_LAYER";
          compatible = "zmk,behavior-macro-one-param";
          #binding-cells = <1>;
          bindings = <&kp KP_NUM>, <&macro_param_1to1>, <&to MACRO_PLACEHOLDER>;
        };
	};

    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        default_layer {
            bindings = <
        //╭────────────┬────────────┬─────────────┬────────────┬────────────╮   ╭────────────┬────────────┬─────────────┬────────────┬────────────╮
        //│  Q         │  W         │  E          │  R         │  T         │   │  Y         │  U         │  I          │  O         │  P         │
            &td_q_esc   &kp W         &kp E         &kp R        &kp T            &kp Y        &kp U        &kp I         &kp O        &kp P
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│  A         │  S         │  D          │  F         │  G         │   │  H         │  J         │  K          │  L         │  ; :       │
            &kp A       &kp S         &kp D         &kp F        &kp G            &kp H        &kp J        &kp K         &kp L        &as SEMI
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│  Z         │  X         │  C          │  V         │  B         │   │  N         │  M         │ , <         │ . >        │  / ?       │
            &kp Z        &kp X        &kp C         &kp V        &kp B            &kp N        &kp M        &kp COMMA     &kp DOT      &as FSLH
        //╰────────────┴────────────┴─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┴────────────╯
                                                    &lt SYMS TAB &kp SPACE        &kp ENTER    &lt NAVS BSPC
        //                                        ╰────────────┴────────────╯   ╰────────────┴────────────╯
            >;
        };

        symbols_layer {
            bindings = <
        //╭────────────┬────────────┬─────────────┬────────────┬────────────╮         ╭────────────┬────────────┬─────────────┬────────────┬────────────╮
        //│  1 !       │  2 @       │  3 #        │  4 $       │  5 %       │         │  6 ^       │  7 &       │  8 *        │  9 (       │  0 )       │
            &kp N1       &kp N2        &kp N3       &kp N4       &kp N5                 &kp N6       &kp N7       &kp N8        &kp N9       &kp N0
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤         ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│ ` ~        │  ~         │  (          │  )         │  +         │         │  -         │  [ {       │  ] }        │  '         │  "         │
            &ht LSHFT GRAVE &ht LCTRL TILDE &ht LGUI LPAR &ht LALT RPAR &ht RALT PLUS   &ht RALT MINUS &ht LALT LBKT &ht LGUI RBKT &ht RCTRL SQT &ht RSHFT DQT
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤         ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│ !          │  @         │  #          │  $         │  %         │         │  ^         │  &         │  *          │  _         │  = +       │
            &kp EXCL     &kp AT       &kp HASH      &kp DOLLAR   &kp PRCNT              &kp CARET    &kp AMPS     &kp STAR      &kp UNDER    &kp EQUAL
        //╰────────────┴────────────┴─────────────┼────────────┼────────────┤         ├────────────┼────────────┼─────────────┼────────────┴────────────╯
                                                    &trans       &trans                 &trans       &trans
        //                                        ╰────────────┴────────────╯         ╰────────────┴────────────╯
            >;
        };

        nav_functions_layer {
            bindings = <
        //╭────────────┬────────────┬─────────────┬────────────┬────────────╮   ╭────────────┬────────────┬─────────────┬────────────┬────────────╮
        //│ ESC        │  F1        │  F2         │  F3        │  F4        │   │  INS       │  HOME      │             │  PG UP     │            │
            &kp ESC      &kp F1       &kp F2        &kp F3       &kp F4           &kp INS      &kp HOME     &none         &kp PG_UP    &kp CAPS
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│            │  F5        │  F6         │  F7        │  F8        │   │  DELETE    │  END       │   ⬆️        │  PG_DOWN   │            │
            &kp LSHFT    &ht LCTRL F5 &ht LGUI F6   &ht LALT F7  &ht RALT F8      &ht RALT DEL &ht LALT END &kp UP        &ht RCTRL PG_DN &hsk RSHFT RSHFT
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│  │         │  F9        │  F10        │  F11       │  F12       │   │  MENU      │  ⬅️        │   ⬇️        │  ➡️        │  \         │
            &kp PIPE     &kp F9       &kp F10       &kp F11      &kp F12          &kp K_CMENU  &kp LEFT     &kp DOWN      &kp RIGHT    &kp BSLH
        //╰────────────┴────────────┴─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┴────────────╯
                                                    &trans       &trans           &trans       &trans
        //                                        ╰────────────┴────────────╯   ╰────────────┴────────────╯
            >;
        };

        media_layer {
            bindings = <
        //╭────────────┬────────────┬─────────────┬────────────┬────────────╮   ╭────────────┬────────────┬─────────────┬────────────┬────────────╮
        //│   POWER   │            │  🔆 -       │            │  🔆 +      │   │  PRINT     │  󰒮 PREV    │   STOP     │  󰐎 PLAY    │  󰒭 NEXT    │
            &kp K_PWR    &none        &kp C_BRI_DN  &none        &kp C_BRI_UP     &kp PSCRN    &kp C_PREV   &kp C_STOP    &kp C_PP     &kp C_NEXT
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│            │            │   VOL DOWN │  󰝟 MUTE    │  󰕾 VOL UP  │   │            │            │             │            │            │
            &none        &none        &kp K_VOL_DN  &kp K_MUTE   &kp K_VOL_UP     &to KEYS     &to SYMS     &to NAVS      &numto GAMENUM &to MOUSE
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│            │            │   PREV     │   CLR     │   NEXT    │   │            │  FILES     │  BROWSER    │  CALC      │            │
            &bootloader  &none        &bt BT_PRV    &bt BT_CLR   &bt BT_NXT       &none        &kp C_AL_FILES &kp C_AL_WWW &kp C_AL_CALC &bootloader
        //╰────────────┴────────────┴─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┴────────────╯
                                                    &trans       &trans           &trans       &trans
        //                                        ╰────────────┴────────────╯   ╰────────────┴────────────╯
            >;
        };

        gaming_numpad_layer {
            bindings = <
        //╭────────────┬────────────┬─────────────┬────────────┬────────────╮   ╭────────────┬────────────┬─────────────┬────────────┬────────────╮
        //│ ESC        │  Q         │  ⬆️         │  E         │  R         │   │  0         │  1         │  2          │  3         │  /         │
            &kp ESC      &kp Q      &kp UP          &kp E        &kp R            &kp KP_N0    &kp KP_N1    &kp KP_N2     &kp KP_N3    &kp KP_DIVIDE
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│ SHIFT      │  ⬅️        │  ⬇️         │  ➡️        │  G         │   │  +         │  4         │  5          │  6         │  *         │
            &kp RSHFT    &kp LEFT     &kp DOWN      &kp RIGHT    &kp G            &kp KP_PLUS  &kp KP_N4    &kp KP_N5     &kp KP_N6    &kp KP_MULTIPLY
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│ CTRL       │  Z         │  X          │  C         │  V         │   │  -         │  7         │  8          │  9         │  ,         │
            &kp LCTRL    &kp Z        &kp X         &kp C        &kp V            &kp KP_MINUS &kp KP_N7    &kp KP_N8     &kp KP_N9    &kp KP_COMMA
        //╰────────────┴────────────┴─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┴────────────╯
                                                    &trans       &trans           &trans       &numto KEYS
        //                                        ╰────────────┴────────────╯   ╰────────────┴────────────╯
            >;
        };

        mouse_layer {
            bindings = <
        //╭────────────┬────────────┬─────────────┬────────────┬────────────╮   ╭────────────┬────────────┬─────────────┬────────────┬────────────╮
        //│            │            │             │            │            │   │  󰍽        │            │  󰍽 󰳽        │            │            │
            &none        &none        &none         &none        &none            &msc SCRL_UP &none        &mkp MCLK     &none        &none
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│            │            │             │            │            │   │  󰍽        │  󰍽 󰳽       │  󰍽         │  󰍽 󰳽       │            │
            &kp LSHFT    &kp LCTRL    &kp LGUI      &kp LALT     &kp RALT         &msc SCRL_DOWN &mkp LCLK  &mmv MOVE_UP  &mkp RCLK    &none
        //├────────────┼────────────┼─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┤────────────┤
        //│            │            │             │            │            │   │            │  󰍽        │  󰍽         │  󰍽        │            │
            &none        &none        &none         &none        &none            &none        &mmv MOVE_LEFT &mmv MOVE_DOWN &mmv MOVE_RIGHT &none
        //╰────────────┴────────────┴─────────────┼────────────┼────────────┤   ├────────────┼────────────┼─────────────┼────────────┴────────────╯
                                                    &trans       &trans           &trans       &to KEYS
        //                                        ╰────────────┴────────────╯   ╰────────────┴────────────╯
            >;
        };
    };
};
